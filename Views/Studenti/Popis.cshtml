@using Paup_2023.Models
@model List<Student>
@{
    ViewBag.Title = "Popis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Popis studenata</h2>
<a href="@Url.Action("Azuriraj", "Studenti")" class="btn btn-success">
    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>Kreiraj novog studenta
</a>

<br />
<br />

@using (Html.BeginForm("Popis", "Studenti", FormMethod.Get, new { @class = "form-inline" }))
{
    @Html.TextBox("naziv", "", new { @class = "form-control", placeholder = "Naziv studenta" })
    <div class="form-control" style="margin-left: 10px;">
        <label class="radio-inline">
            @Html.RadioButton("spol", "M") Muški
        </label>
        <label class="radio-inline">
            @Html.RadioButton("spol", "Z") Ženski
        </label>
        <label class="radio-inline">
            @Html.RadioButton("spol", "") Svi
        </label>
    </div>

    <button type="submit" class="btn btn-primary">
        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        Traži
    </button>
}

@if (Model.Count > 0)
{
    <table border="1">
        <tr>
            <th>Id</th>
            <th>Prezime</th>
            <th>Ime</th>
            <th>Oib</th>
            <th>Redovni</th>
            <th>Akcije</th>
        </tr>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.Id</td>
                <td>@student.Prezime</td>
                <td>@student.Ime</td>
                <td>@student.Oib</td>
                <td>@Html.CheckBox("chbRedovan", student.RedovanStudent)</td>
                <td>@Html.ActionLink("Info", "Detalji", new { id = student.Id }, new { @class = "btn btn-info btn-sm" })</td>
                <td>@Html.ActionLink("Ažuriraj", "Azuriraj", new { id = student.Id }, new { @class = "btn btn-warning btn-sm" })</td>
                <td>@Html.ActionLink("Izbriši", "Brisi", new { id = student.Id }, new { @class = "btn btn-danger btn-sm" })</td>
            </tr>
        }
    </table>
}
else
{
    <p>Nema rezultata pretrage.</p>
}
